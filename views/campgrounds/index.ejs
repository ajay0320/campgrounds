<% layout('/layouts/boilerplate') %>
<div id="map" style=" width:100% ; height: 500px;"></div>
    <h1>ALL CAMPGROUNDS!</h1>
    <% for (let camp of campgrounds){  %>
        <div class="card mb-3" >
            <div class="row ">
                <div class="col-md-4">
                    <%if(camp.images.length){%>
                    <img crossorigin="anonymous" src="<%= camp.images[0].url %>" alt="" class="img-fluid">
                    <%}else{%>
                        <img crossorigin="anonymous" src="https://res.cloudinary.com/dyumcn403/image/upload/v1748449158/Yelpcamp/hcfstsbyc0ylcik9qp19.jpg" alt="" class="img-fluid">
                        <% } %>
                </div>
                <div class="col md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= camp.title %></h5>
                        <p class="card-text"><%= camp.description %></p>
                        <p class="card-text"><small class="text-muted"><%= camp.location %></small></p>
                        <a class="btn btn-primary" href="/campgrounds/<%=camp._id%>">View <%= camp.title%></a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
    <footer><a href="/campgrounds/new">Add Campgrounds</a></footer>

<script>
  const maptilerApiKey = '<%- process.env.MAPTILER_KEY %>';
  const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}
</script>

 
<script src="/javascript/clusterMap.js"></script>
