<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Campground</h1>
      <div class="col-md-6 offset-md-3">
        <form action="/campgrounds" method="post" enctype="multipart/form-data" class ="validated-form" novalidate>
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" name="campground[title]" id="title" required>
                <div class="valid-feedback">
                    Looks Fabulous!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" name="campground[location]" id="location" required>
                <div class="valid-feedback">
                    Looks Fabulous!
                </div>
            </div>
            <div class="mb-3">
                <label for="images" class="form-label">Choose Images</label>
                <input class="form-control" type="file" name="images" id="images" multiple>
            </div>

            <!-- <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" name="campground[image]" id="image" required>
                <div class="valid-feedback">
                    Looks Fabulous!
                </div>
            </div> -->
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" name="campground[description]" id="description" required></textarea>
                <div class="valid-feedback">
                    Looks Fabulous!
                </div>
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text" for="price">$</span>
                <input type="number" class="form-control " placeholder="0.00" name="campground[price]" id="price" required>
              </div>
              
            <div class="mb-3">
                <button class="btn btn-success">Add Campground</button>
            </div>
            
        </form>
    </div>
</div>
    
    <footer><a href="/campgrounds">All Campgrounds</a></footer>



